function LeaderboardTabContent({ clubs }: { clubs: Club[] }) {
  const sortedClubs = useMemo(() => {
      return [...clubs].sort((a,b) => b.trophies - a.trophies);
  }, [clubs]);

  const rankChanges: ('up' | 'down' | 'same')[] = ['same', 'down', 'up', 'same', 'down', 'up', 'up', 'down'];

  return (
      <>
        <LeaderboardPrizeHeader />
        <div className="space-y-3">
            {sortedClubs.map((club, index) => (
                <ClubListItem key={club.id} club={club} rank={index + 1} change={rankChanges[index] || 'same'} />
            ))}
        </div>
      </>
  );
}

