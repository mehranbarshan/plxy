function CreateClubForm({ onClubCreated }: { onClubCreated: () => void }) {
  const { toast } = useToast();
  const [clubName, setClubName] = useState('');
  const [description, setDescription] = useState('');
  const [clubType, setClubType] = useState<Club['type']>("open");
  const [minTrophies, setMinTrophies] = useState("0");
  const [location, setLocation] = useState<string | undefined>("International");
  const [familyFriendly, setFamilyFriendly] = useState(false);
  const [isBadgeDialogOpen, setIsBadgeDialogOpen] = useState(false);

  const [badge, setBadge] = useState({
    icon: 'btc',
    iconContent: '₿',
    bgColor: '#f97316',
    borderColor: 'default'
  });

  const handleSaveBadge = () => {
    localStorage.setItem('tradeview_badge_draft', JSON.stringify(badge));
    setIsBadgeDialogOpen(false);
  }
  
  const handleCreateClub = () => {
      const username = localStorage.getItem(USERNAME_KEY);
      if (!username) {
        toast({ variant: 'destructive', title: "Not Logged In", description: "You must be logged in to create a club." });
        return;
      }
      
      if (!clubName.trim()) {
          toast({
              variant: 'destructive',
              title: 'Club Name Required',
              description: 'Please enter a name for your club.',
          });
          return;
      }

      const storedClubs = localStorage.getItem(CLUBS_KEY);
      const currentClubs: Club[] = storedClubs ? JSON.parse(storedClubs) : staticClubs;

      const newClub: Club = {
          id: clubName.toLowerCase().replace(/\s+/g, '-') + '-' + Date.now(),
          name: clubName,
          description: description,
          type: clubType,
          maxMembers: 50,
          requiredTrophies: parseInt(minTrophies),
          badge: badge,
          chatMessages: [],
          trophies: 0, // Will be updated by owner's trophies
          members: 1,
          location: location,
      };

      const storedMembers = localStorage.getItem(MEMBERS_KEY);
      const currentMembers: Member[] = storedMembers ? JSON.parse(storedMembers) : initialMembersData;

      const ownerMemberIndex = currentMembers.findIndex(m => m.name === username);

      const ownerTrophies = ownerMemberIndex !== -1 ? currentMembers[ownerMemberIndex].trophies : 0;
      
      if (ownerMemberIndex !== -1) {
          currentMembers[ownerMemberIndex].clubId = newClub.id;
          currentMembers[ownerMemberIndex].role = 'Owner';
          newClub.trophies = ownerTrophies; // Set initial club trophies to owner's
      } else {
          // This case should ideally not happen if user is "logged in"
           const newOwner: Member = {
              id: username.toLowerCase().replace(/\s+/g, '-'),
              clubId: newClub.id,
              name: username,
              role: 'Owner',
              trophies: 0,
              avatar: localStorage.getItem('tradeview_avatar') || 'https://placehold.co/100x100.png'
          };
          currentMembers.push(newOwner);
      }
      
      const updatedClubs = [...currentClubs, newClub];
      localStorage.setItem(CLUBS_KEY, JSON.stringify(updatedClubs));
      localStorage.setItem(MEMBERS_KEY, JSON.stringify(currentMembers));
      localStorage.removeItem('tradeview_badge_draft');

      toast({
          title: `Club "${clubName}" Created!`,
          description: "You are now the owner of this new club.",
      });

      onClubCreated();
  };


  return (
    <Dialog open={isBadgeDialogOpen} onOpenChange={setIsBadgeDialogOpen}>
        <div className="space-y-4 pt-2">
          <div className="grid grid-cols-[auto,1fr] items-center gap-x-4 gap-y-4">
            <Label htmlFor="clubName" className="text-sm font-semibold text-muted-foreground text-right">Club Name</Label>
            <Input id="clubName" value={clubName} onChange={(e) => setClubName(e.target.value)} placeholder="Enter club name..." className="w-full bg-background border-2" />

            <Label className="text-sm font-semibold text-muted-foreground text-right">Badge</Label>
            <div className="flex items-center gap-2">
                <div className="p-1 bg-secondary rounded-lg border-2 w-12 h-12 flex items-center justify-center">
                    <BadgePreview icon={badge.icon} iconContent={badge.iconContent} bgColor={badge.bgColor} borderColor={badge.borderColor} size={40} />
                </div>
                <DialogTrigger asChild>
                    <Button variant="ghost" size="sm" className="bg-blue-600 text-white hover:bg-blue-700">Browse</Button>
                </DialogTrigger>
            </div>

            <Label htmlFor="description" className="text-sm font-semibold text-muted-foreground text-right self-start pt-2">Description</Label>
            <Textarea
              id="description"
              value={description}
              onChange={(e) => setDescription(e.target.value)}
              placeholder="Describe your club..."
              maxLength={150}
              className="w-full bg-background border-2"
            />

            <Label className="text-sm font-semibold text-muted-foreground text-right">Type</Label>
            <OptionSelector 
              label="Type"
              options={["open", "invite", "closed"]}
              selected={clubType}
              onSelect={(value) => setClubType(value as Club['type'])}
            />
            
            <Label className="text-sm font-semibold text-muted-foreground text-right">Required Trophies</Label>
            <OptionSelector 
              label="Required Trophies"
              options={["0", "1000", "2000", "3000", "4000", "5000"]}
              selected={minTrophies}
              onSelect={setMinTrophies}
              icon={<Trophy className="w-4 h-4 text-yellow-500" />}
            />
            
            <Label className="text-sm font-semibold text-muted-foreground text-right flex items-center justify-end gap-1">
                Family Friendly
                <Info className="w-4 h-4 text-muted-foreground cursor-pointer" />
            </Label>
            <div className="flex justify-start">
                <Switch id="family-friendly" checked={familyFriendly} onCheckedChange={setFamilyFriendly} />
            </div>

            <Label htmlFor="location" className="text-sm font-semibold text-muted-foreground text-right">Club Location</Label>
            <Select value={location} onValueChange={setLocation}>
                <SelectTrigger id="location" className="w-full h-9">
                    <div className="flex items-center gap-2">
                        <MapPin className="w-4 h-4 text-muted-foreground" />
                        <SelectValue placeholder="Browse" />
                    </div>
                </SelectTrigger>
                <SelectContent>
                    <ScrollArea className="h-72">
                        {countries.map((country) => (
                        <SelectItem key={country} value={country}>
                            {country}
                        </SelectItem>
                    ))}
                    </ScrollArea>
                </SelectContent>
            </Select>
          </div>

          <Button className="w-full h-12 text-lg font-bold bg-blue-600 hover:bg-blue-700" onClick={handleCreateClub} disabled={!clubName.trim()}>
            <span className="flex items-center gap-2">
                Create
                <Gem className="w-4 h-4" />
                1,000
            </span>
          </Button>
        </div>
        <BadgeSelectorDialog onBadgeChange={setBadge} onSave={handleSaveBadge} />
    </Dialog>
  )
}

const ClubRankIndicator = ({ rank, change }: { rank: number; change: 'up' | 'down' | 'same' }) => {
    const rankColor = rank <= 3 ? 'text-yellow-500' : 'text-muted-foreground';
    let ChangeIcon = null;
    let changeColor = '';

    switch(change) {
        case 'up':
            ChangeIcon = ArrowUp;
            changeColor = 'text-green-500';
            break;
        case 'down':
            ChangeIcon = ArrowDown;
            changeColor = 'text-red-500';
            break;
        default:
            break;
    }

    return (
        <div className="flex flex-col items-center w-10">
            <span className={cn("font-bold text-lg", rankColor)}>{rank}</span>
            {ChangeIcon && <ChangeIcon className={cn("w-4 h-4", changeColor)} />}
        </div>
    )
}

