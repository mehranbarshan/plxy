export default function ClubPage() {
  const router = useRouter();
  const pathname = usePathname();
  const { toast } = useToast();
  const [activeTab, setActiveTab] = useState("leaderboard");
  const [userClub, setUserClub] = useState<Club | null>(null);
  const [leaderboardClubs, setLeaderboardClubs] = useState<Club[]>([]);
  const [searchQuery, setSearchQuery] = useState('');
  const [isCreateClubOpen, setIsCreateClubOpen] = useState(false);

  const updateClubData = () => {
      const username = localStorage.getItem(USERNAME_KEY);
      const storedMembers = localStorage.getItem(MEMBERS_KEY);
      const currentMembers: Member[] = storedMembers ? JSON.parse(storedMembers) : initialMembersData;
      
      const storedClubs = localStorage.getItem(CLUBS_KEY);
      const allClubs: Club[] = storedClubs ? JSON.parse(storedClubs) : staticClubs;

      const dynamicClubs: Club[] = allClubs.map(club => {
          const clubMembers = currentMembers.filter((member: Member) => member.clubId === club.id);
          const totalTrophies = clubMembers.reduce((sum: number, member: Member) => sum + member.trophies, 0);
          return {
              ...club,
              trophies: totalTrophies,
              members: clubMembers.length,
          };
      });

      setLeaderboardClubs(dynamicClubs);

      if (!username) {
          setUserClub(null);
          return;
      };
      
      const memberRecord = currentMembers.find((m: Member) => m.name === username);
      if (memberRecord && memberRecord.clubId) {
          const club = dynamicClubs.find(c => c.id === memberRecord.clubId);
          if (club) {
              setUserClub(club);
              if (pathname === '/club' && activeTab !== 'my-club') {
                  setActiveTab('my-club');
              }
          } else {
              setUserClub(null);
          }
      } else {
          setUserClub(null);
      }
  };

  useEffect(() => {
    updateClubData();
    
    const handleStorageChange = () => updateClubData();
    window.addEventListener('storage', handleStorageChange);
    
    return () => window.removeEventListener('storage', handleStorageChange);
  }, [pathname]);

  const handleLeave = () => {
      const username = localStorage.getItem(USERNAME_KEY);
      if (!username || !userClub) return;

      const storedMembers = localStorage.getItem(MEMBERS_KEY);
      const currentMembers: Member[] = storedMembers ? JSON.parse(storedMembers) : initialMembersData;
      const clubMembers = currentMembers.filter(m => m.clubId === userClub.id);
      const currentUserInClub = clubMembers.find(m => m.name === username);

      let wasOwnerAndLastMember = false;
      if (currentUserInClub && currentUserInClub.role === 'Owner' && clubMembers.length === 1) {
          wasOwnerAndLastMember = true;
          // Delete the club
          const storedClubs = localStorage.getItem(CLUBS_KEY);
          const currentClubs: Club[] = storedClubs ? JSON.parse(storedClubs) : staticClubs;
          const updatedClubs = currentClubs.filter(c => c.id !== userClub.id);
          localStorage.setItem(CLUBS_KEY, JSON.stringify(updatedClubs));
      }

      // Update member's club status
      const updatedMembers = currentMembers.map(m => {
          if (m.name === username && m.clubId === userClub.id) {
              return { ...m, clubId: '', role: 'Member' };
          }
          return m;
      });
      localStorage.setItem(MEMBERS_KEY, JSON.stringify(updatedMembers));

      toast({
          variant: "destructive",
          title: wasOwnerAndLastMember ? `${userClub.name} has been disbanded.` : `You have left ${userClub.name}`,
      });
      
      updateClubData();
      setActiveTab("leaderboard");
  };

  const onClubCreated = () => {
    updateClubData();
    setIsCreateClubOpen(false);
  }


  return (
    <Dialog open={isCreateClubOpen} onOpenChange={setIsCreateClubOpen}>
      <div className="flex flex-col min-h-screen bg-background font-body">
          <header className="sticky top-0 z-10 bg-background/80 backdrop-blur-sm">
              <AppHeader />
              <div className="container mx-auto max-w-2xl px-4">
                   <Tabs value={activeTab} onValueChange={setActiveTab}>
                    <TabsList className="flex flex-wrap items-center justify-center bg-secondary rounded-xl p-1 h-auto shrink-0">
                       <TabsTrigger value="leaderboard" className="justify-center data-[state=active]:shadow-sm rounded-lg px-3 py-1.5 text-xs gap-1 flex-shrink-0">
                          <Trophy className="w-4 h-4" />
                          <span>Leaderboard</span>
                       </TabsTrigger>
                      {userClub ? (
                           <TabsTrigger value="my-club" className="justify-center data-[state=active]:shadow-sm rounded-lg px-3 py-1.5 text-xs gap-1 flex-shrink-0">
                              <Shield className="w-4 h-4" />
                              <span>My Club</span>
                           </TabsTrigger>
                       ) : null}
                      <TabsTrigger value="club" className="justify-center data-[state=active]:shadow-sm rounded-lg px-3 py-1.5 text-xs gap-1 flex-shrink-0">
                          <Shield className="w-4 h-4" />
                          <span>Club</span>
                      </TabsTrigger>
                      <TabsTrigger value="social" className="justify-center data-[state=active]:shadow-sm rounded-lg px-3 py-1.5 text-xs gap-1 flex-shrink-0">
                          <Users className="w-4 h-4" />
                          <span>Social</span>
                      </TabsTrigger>
                    </TabsList>
                   </Tabs>
                   {activeTab === 'club' && (
                      <div className="my-4 space-y-2">
                          <div className="relative">
                              <Search className="absolute left-3 top-1/2 -translate-y-1/2 h-4 w-4 text-muted-foreground" />
                              <Input 
                                  placeholder="Search for a club..."
                                  value={searchQuery}
                                  onChange={(e) => setSearchQuery(e.target.value)}
                                  className="pl-10 bg-secondary"
                              />
                          </div>
                          <div className="flex items-center justify-between px-2">
                              <Label htmlFor="advanced-search" className="text-xs text-muted-foreground">Advanced search</Label>
                              <Button variant="link" size="sm" className="text-xs h-auto py-0">Show</Button>
                          </div>
                      </div>
                  )}
              </div>
          </header>
        <main className="flex-grow container mx-auto max-w-2xl px-4 flex flex-col pb-28">
          <Tabs value={activeTab} className="flex flex-col flex-grow">
            <div className="pt-4 flex-grow min-h-0">
               <TabsContent value="leaderboard" className="h-full m-0">
                  <ScrollArea className="h-full">
                    <LeaderboardTabContent clubs={leaderboardClubs} />
                  </ScrollArea>
               </TabsContent>
               <TabsContent value="club" className="h-full m-0">
                  <JoinClubForm userHasClub={!!userClub} searchQuery={searchQuery} />
               </TabsContent>
               {userClub && (
                  <TabsContent value="my-club" className="h-full m-0">
                      <ScrollArea className="h-full">
                          <MyClubView club={userClub} onLeave={handleLeave} />
                      </ScrollArea>
                  </TabsContent>
               )}
               <TabsContent value="social" className="h-full m-0">
                   <ScrollArea className="h-full">
                      <SocialTabContent />
                   </ScrollArea>
               </TabsContent>
            </div>
          </Tabs>
        </main>
        {!userClub && !['leaderboard', 'social'].includes(activeTab) && (
          <div className="sticky bottom-[66px] z-10 p-4 bg-background/80 backdrop-blur-sm border-t">
              <div className="container mx-auto max-w-2xl px-0">
                <DialogTrigger asChild>
                    <Button className="w-full h-12">
                        <Plus className="w-5 h-5 mr-2" />
                        Create a Club
                    </Button>
                </DialogTrigger>
              </div>
          </div>
        )}
        <div className="sticky bottom-0 z-20">
          <BottomNav />
        </div>
      </div>
      <DialogContent className="sm:max-w-md bg-secondary border-4 border-blue-900/50 rounded-2xl">
          <div className="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2">
            <div className="bg-blue-900/80 border-4 border-blue-900/50 p-2 rounded-xl">
                 <Shield className="w-10 h-10 text-yellow-400" />
            </div>
          </div>
           <DialogClose className="absolute top-2 right-2 p-1 bg-red-600 rounded-md text-white border-2 border-red-800">
                <X className="w-4 h-4"/>
            </DialogClose>
          <DialogHeader className="text-center pt-8">
            <DialogTitle className="text-xl font-bold uppercase tracking-wider font-display">Create your own Club</DialogTitle>
            <DialogDescription className="font-semibold text-blue-400">
              LEAD YOUR members to profit!
            </DialogDescription>
          </DialogHeader>
          <CreateClubForm onClubCreated={onClubCreated} />
      </DialogContent>
    </Dialog>
  );
}